<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/supremelightgrey"
    tools:context=".userpackage.Register">

    <!--REGISTRATION PAGE TITLE-->
    <TextView
        android:layout_marginStart="90dp"
        android:textStyle="bold"
        android:paddingTop="60dp"
        android:textAlignment="center"
        android:textColor="@color/headings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_title"
        android:fontFamily="@font/extraboldfont"
        android:layout_marginBottom="60dp"
        android:textSize="50sp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginStart="30dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username"
                android:hint="@string/username_txt"
                android:inputType="textPersonName"
                android:textColor="@color/headings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginStart="30dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:hint="@string/email_txt"
                android:layout_width="match_parent"
                android:inputType="textEmailAddress"
                android:textColor="@color/headings"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginStart="30dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone"
                android:hint="@string/phone_txt"
                android:inputType="textPhonetic"
                android:layout_width="match_parent"
                android:textColor="@color/headings"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:hint="@string/password_txt"
                android:inputType="textPassword"
                android:textColor="@color/headings"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:hint="@string/confirm_txt"
                android:inputType="textPassword"
                android:textColor="@color/headings"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="match_parent"
    android:orientation="horizontal">
<Button
    android:id="@+id/back_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="27dp"
    android:layout_marginStart="40dp"
    android:text="@string/back_btn"
    android:textColor="@color/headings"
    android:fontFamily="@font/regularfont"
    app:backgroundTint="@android:color/transparent"
    tools:layout_editor_absoluteX="9dp"
    tools:layout_editor_absoluteY="650dp"
    tools:ignore="ButtonStyle" />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/reg_btn"
    android:layout_marginStart="150dp"
    android:layout_marginEnd="10dp"
    android:text="@string/register_btn"
    android:backgroundTint="@color/headings"
    android:fontFamily="@font/regularfont"
    android:textAlignment="center"
    android:layout_marginTop="30dp"
    tools:ignore="ButtonStyle" />

</LinearLayout>

</LinearLayout>