<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/grad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blockchain Display Here"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:fontFamily="@font/extraboldfont"
        />

    <ScrollView
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="545dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/chatborder">

        <TextView
            android:id="@+id/textViewBlockDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text Display Here"/>

    </ScrollView>

    <include
        android:id="@+id/mytoolbar"
        layout="@layout/activity_toolbar" />

</LinearLayout>